{
  "name": "privid",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node scripts/preinstall.js",
    "postinstall": "node scripts/postinstall.js",
    "setup": "pnpm install && pnpm build",
    "verify": "node scripts/verify-setup.js",
    "dev": "pnpm -F web dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "hardhat:compile": "pnpm -F @privid/contracts hardhat compile",
    "hardhat:test": "pnpm -F @privid/contracts hardhat test",
    "hardhat:deploy": "pnpm -F @privid/contracts hardhat deploy",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": "8.15.0"
  },
  "packageManager": "pnpm@8.15.0"
}

