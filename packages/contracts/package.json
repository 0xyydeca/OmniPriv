  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@typechain/hardhat": "^9.1.0",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.12.1",
    "viem": "^2.7.8",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1"
