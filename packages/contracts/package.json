{
  "name": "@omnipriv/contracts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat deploy",
    "deploy:baseSepolia": "hardhat deploy --network baseSepolia",
    "deploy:celoSepolia": "hardhat deploy --network celoSepolia",
    "setPeers:baseSepolia": "hardhat run scripts/setPeers.ts --network baseSepolia",
    "setPeers:celoSepolia": "hardhat run scripts/setPeers.ts --network celoSepolia",
    "verify": "hardhat verify",
    "clean": "hardhat clean && rm -rf cache artifacts typechain-types",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "dependencies": {
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.3",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.3",
    "@openzeppelin/contracts": "^5.0.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@typechain/hardhat": "^9.1.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.12.1",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "viem": "^2.7.8"
  }
}
